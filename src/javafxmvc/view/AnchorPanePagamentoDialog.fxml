<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="720.0" prefWidth="980.0" styleClass="body" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.javafxmvc.controller.AnchorPanePagamentoDialogController">
   <children>
      <Label layoutX="70.0" layoutY="50.0" styleClass="h1" stylesheets="@../style.css" text="Registrar Pagamento" />
      <Group layoutX="313.0" layoutY="150.0">
         <children>
            <Label text="Aluno" />
            <ComboBox fx:id="comboBoxAlunos" layoutY="28.0" onAction="#handleComboBoxAlunos" prefWidth="150.0" styleClass="input" />
            <Label fx:id="labelErroAluno" layoutX="1.0" layoutY="87.0" styleClass="error" stylesheets="@../style.css" />
         </children>
      </Group>
      <Group layoutX="313.0" layoutY="282.0">
         <children>
            <Label text="Data" />
            <DatePicker fx:id="datePicker" editable="false" layoutY="28.0" />
            <Label fx:id="labelErroData" layoutX="1.0" layoutY="87.0" styleClass="error" stylesheets="@../style.css" />
         </children>
      </Group>
      <Group layoutX="313.0" layoutY="414.0">
         <children>
            <Label text="Valor" />
            <Label fx:id="labelValor" layoutY="25.0" styleClass="input" />
            <Label fx:id="labelDesconto" layoutY="87.0" styleClass="error" stylesheets="@../style.css" />
         </children>
      </Group>
      <Group layoutX="392.0" layoutY="582.0">
         <children>
            <Button fx:id="buttonRegistrar" layoutX="151.0" mnemonicParsing="false" onAction="#handleButtonRegister" styleClass="register" text="Registrar" />
            <Button fx:id="buttonCancelar" mnemonicParsing="false" onAction="#handleButtonCancel" styleClass="cancel" text="Cancelar" />
         </children>
      </Group>
    </children>
</AnchorPane>